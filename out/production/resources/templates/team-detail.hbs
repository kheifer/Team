{{#partial "content"}}
    {{#if newTeam}}
        <p>{{newTeam.teamName}}  <a href="/restaurants/{{editPlace.id}}/update"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></p>
        <ul>
            <li>Team Description:<br> {{newTeam.teamDescription}}</li><br><br>
            <li>Team members:<li>
            <ul>
        {{#if newMembers}}
            {{#each newMembers}}
                <li>{{this}}</li>
            {{/each}}
            {{else}}
            <p>There are no member's currently listed.</p>
        {{/if}}
            </ul>
        </ul>
    {{else}}
        <p>No Teams to display!</p>
    {{/if}}

    <form action="/teams/{{newTeam.id}}" method="post">
        <label for="newTeamMate">Add a new teammate:</label>
        <input id="newTeamMate" name="newTeamMate" type="text">
        <button type="submit" class="btn btn-success">Go!</button>
    </form>
{{/partial}}

{{> layout.hbs}}