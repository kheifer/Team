{{#partial "content"}}


    <h3>Search by:</h3>
    <form action="/search" method="post">
        <div class="form-group">
                <label for="memberName">Search by teammate:</label>
                <input id="memberName" name="memberName" type="text">
                <button type="submit" name="form-control" class="btn btn-success">Go!</button>
        </div>
    </form>

    {{#if newTeam}}
        <p>{{newTeam.teamName}}  <a href="/teams/{{newTeam.id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></p>
    {{else}}
        <p>No Teams to display!</p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}