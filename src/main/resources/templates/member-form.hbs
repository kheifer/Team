{{#partial "content"}}
    {{#if editMember}}

        <div class="well">
            <h1>Edit Member details:</h1>
            <form action="/teams/{{editMember.memberId}}/members/{{editMember.id}}/edit" method="post">
                <div class="form-group">
                    <label for="teams">Teams:</label>
                    <select id="teams" name="memberId" required>
                        {{#each teams}}
                            <option value="{{this.id}}">{{this.teamName}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class ="form-group">
                    <label for="name">Member Name: </label>
                    <input id="name" name="name" type="text" class="form-control" value="{{editMember.name}}" required>
                </div>
                <div class ="form-group">
                    <label for="homeTown">Where are you from: </label>
                    <input id="homeTown" name="homeTown" type="text" class="form-control" value="{{editMember.homeTown}}" required>
                </div>
                <div class ="form-group">
                    <label for="occupation">Occupation: </label>
                    <input id="occupation" name="occupation" type="text" class="form-control" value="{{editMember.occupation}}" required>
                </div>
                <div class ="form-group">
                    <label for="age">Age: </label>
                    <input id="age" name="age" type="text" class="form-control" value="{{editMember.age}}" required>
                </div>
                <button type="submit" class="btn btn-success">Update Member Info</button>
            </form>
        </div>

    {{else}}
        <div class="well">
            <h1>Add a new Member!</h1>
            <form action="/members/new" method="post">
                <div class="form-group">
                    <label for="memberId">Teams:</label>
                    <select id="memberId" name="memberId" required>
                        {{#each teams}}
                            <option value="{{this.id}}">{{this.teamName}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class ="form-group">
                    <label for="name">Member Name: </label>
                    <input id="name" name="name" type="text" class="form-control" placeholder="enter your full name" Name required>
                </div>
                <div class ="form-group">
                    <label for="homeTown">Where are you from: </label>
                    <input id="homeTown" name="homeTown" type="text" class="form-control" placeholder="Enter town and State" required>
                </div>
                <div class ="form-group">
                    <label for="occupation">Occupation: </label>
                    <input id="occupation" name="occupation" type="text" class="form-control" placeholder="enter occupation" required>
                </div>
                <div class ="form-group">
                    <label for="age">Age: </label>
                    <input id="age" name="age" type="text" class="form-control" placeholder="enter age in years" required>
                </div>
                <button type="submit" class="btn btn-success">Submit!</button>
            </form>
        </div>
    {{/if}}


{{/partial}}

{{> layout.hbs}}